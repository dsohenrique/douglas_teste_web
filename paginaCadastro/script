create database empresa

use database empresa 

create table tb_motorista(
id_motorista bigint auto_increment primary key not null,
nm_motorista varchar(30) not null,
dt_nascimento date not null,
cpf_motorista varchar(13) not null,
sx_motorista varchar(06) not null,
md_veiculo varchar(20) not null,
st_motorista varchar(10) not null
)

create table tb_passageiro(
id_passageiro bigint auto_increment primary key not null,
nm_passageiro varchar(30) not null,
dt_nascimento date not null,
cpf_passageiro varchar(13) not null,
sx_passageiro varchar(06) not null)

